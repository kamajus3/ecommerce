{
  "rules": {
    "products": {
      ".indexOn": ["name", "nameLowerCase", "category", "views", "campaign/id", "updatedAt",  "createdAt"],
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    "product_views": {
      ".indexOn": ["updatedAt", "createdAt", "userId", "productId"],
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'client'"
    },
    "campaigns": {
      ".indexOn": ["updatedAt",  "createdAt"],
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    "users": {
      ".indexOn": ["role"],
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "orders": {
      ".indexOn": ["updatedAt", "createdAt", "userId"],
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}