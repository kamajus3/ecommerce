{
  "rules": {
    ".indexOn": ["products", "orders"],
    "products": {
      ".indexOn": ["campaign/id", "nameLowerCase", "category", "updatedAt",  "createdAt"],
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    "campaigns": {
      ".indexOn": ["updatedAt",  "createdAt"],
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    "informations": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    "views": {
      ".read": true,
      ".write": true
    },
    "users": {
      ".read": true,
      ".write": true
    },
    "orders": {
      ".indexOn": ["updatedAt", "createdAt", "userId"],
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
